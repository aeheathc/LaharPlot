boostversion = 1_38
boostpath = C:/cygwin/usr/include/boost_$(boostversion)_0
boostlibs = \C:/cygwin/usr/local/lib/libboost_program_options-gcc34-mt.a \C:/cygwin/usr/local/lib/libboost_thread-gcc34-mt.a
paths = -IC:/cygwin/usr/include/boost_1_38_0 


exec = zone_win32.exe
objs = zone.o

all: zone.o
	g++ zone.o -Wall -o $(exec) $(paths) $(boostlibs) 

zone.o: zone.cpp zone.h
	g++ zone.cpp -c $(paths)
	
clean: 
	rm -f ${exec} ${objs}
